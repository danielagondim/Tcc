@model TCC.CursosOnline.Dominio.Entidades.EscolheCursoViewModel

@{
    ViewBag.Title = "Relatório";
}

<h2>Relatório</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-2">
                Filtrar Curso:
            </div>
            <div class="col-md-10">
                @Html.DropDownList("Id", ViewData["listaCurso"] as SelectList, "Selecione", new { @class = "form-control" })               
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gerar Relatório" class="btn btn-success" />
            </div>
        </div>
    </div>
}


