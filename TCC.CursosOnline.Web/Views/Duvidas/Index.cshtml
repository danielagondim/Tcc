@model IEnumerable<TCC.CursosOnline.Dominio.Entidades.Forum_topico>

@{
    ViewBag.Title = "Dúvidas";
}

<h2>Fórum de Dúvidas</h2>
<hr />
<p>

    @Html.ActionLink("Nova Dúvida", "CadastrarTopico", "Duvidas", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
           Usuário
        </th>
        <th>
            Data
        </th>        
        <th>
            Dúvida
        </th>
        <th>
            Respostas
        </th>        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>

            <td>
                @Html.ActionLink("Respostas", "ListaRespostas", new { id_topico = item.Id_topico }, new { @class = "btn btn-primary" })

            </td>
           
        </tr>
    }

</table>
