@model IEnumerable<TCC.CursosOnline.Dominio.Entidades.Forum_resposta>

@{
    ViewBag.Title = "Respostas";
}

<h2>Fórum de Dúvidas - Respostas</h2>
<hr />
<p>

    @Html.ActionLink("Nova Resposta", "CadastrarResposta", "Duvidas", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Usuário
        </th>
        <th>
            Data
        </th>
        <th>
            Resposta
        </th>      
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>        

        </tr>
    }

</table>

<div>
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })

</div>