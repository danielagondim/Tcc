@model IEnumerable<TCC.CursosOnline.Dominio.Entidades.MeusCursosViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Meus Cursos</h2>
<hr />


<table class="table">
    <tr>

        <th>
            Curso
        </th>
        <th>
            Categoria
        </th>
        <th>
            Data Inscrição
        </th>

        <th>
            Andamento
        </th>
        <th>
            Nota Final
        </th>

        <th>Acessar</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Titulo_curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dt_inscricao)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Andamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotaFinal)
            </td>
            <td>
                @Html.ActionLink("Acessar", "Acessar", new { id_curso = item.Id_curso }, new { @class = "btn btn-primary" })

            </td>
        </tr>
    }

</table>
